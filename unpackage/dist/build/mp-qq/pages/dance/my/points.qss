.container{min-height:100vh;background-color:#1c1b21;padding:30rpx}.header{display:flex;justify-content:space-between;align-items:center;margin-bottom:40rpx}.header .points-info .label{color:rgba(255,255,255,.6);font-size:28rpx;margin-right:20rpx}.header .points-info .value{color:#ff4d8f;font-size:48rpx;font-weight:600}.header .rule-link{color:#fff;font-size:28rpx;padding:10rpx 30rpx;background:rgba(255,255,255,.1);border-radius:100rpx}.goods-list .goods-item{background:rgba(255,255,255,.1);border-radius:20rpx;overflow:hidden;margin-bottom:30rpx}.goods-list .goods-item .image{width:100%;height:300rpx}.goods-list .goods-item .info{padding:30rpx}.goods-list .goods-item .info .name{color:#fff;font-size:32rpx;font-weight:600;margin-bottom:12rpx;display:block}.goods-list .goods-item .info .desc{color:rgba(255,255,255,.6);font-size:26rpx;margin-bottom:20rpx;display:block}.goods-list .goods-item .info .bottom{display:flex;justify-content:space-between;align-items:center}.goods-list .goods-item .info .bottom .points{color:#ff4d8f;font-size:32rpx;font-weight:600}.goods-list .goods-item .info .bottom .exchange-btn{width:160rpx;height:60rpx;line-height:60rpx;background:#ff4d8f;color:#fff;font-size:26rpx;border-radius:100rpx}.goods-list .goods-item .info .bottom .exchange-btn.disabled{background:rgba(255,255,255,.2);color:rgba(255,255,255,.6)}
