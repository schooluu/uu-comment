.container{min-height:100vh;background-color:#1c1b21;padding:30rpx}.header{text-align:center;margin-bottom:60rpx}.header .title{color:#fff;font-size:36rpx;font-weight:600;margin-bottom:12rpx;display:block}.header .subtitle{color:rgba(255,255,255,.6);font-size:28rpx}.invite-code{background:rgba(255,255,255,.1);border-radius:20rpx;padding:30rpx;margin-bottom:40rpx}.invite-code .label{color:rgba(255,255,255,.6);font-size:28rpx;margin-bottom:20rpx;display:block}.invite-code .code-box{display:flex;align-items:center;justify-content:space-between}.invite-code .code-box .code{color:#ff4d8f;font-size:48rpx;font-weight:600}.invite-code .code-box .copy-btn{width:120rpx;height:60rpx;line-height:60rpx;background:#ff4d8f;color:#fff;font-size:26rpx;border-radius:100rpx}.record-section{margin-bottom:60rpx}.record-section .section-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:30rpx}.record-section .section-header .title{color:#fff;font-size:32rpx;font-weight:600}.record-section .section-header .count{color:rgba(255,255,255,.6);font-size:26rpx}.record-list .record-item{display:flex;align-items:center;background:rgba(255,255,255,.1);border-radius:20rpx;padding:20rpx 30rpx;margin-bottom:20rpx}.record-list .record-item .avatar{width:80rpx;height:80rpx;border-radius:50%;margin-right:20rpx}.record-list .record-item .info{flex:1}.record-list .record-item .info .name{color:#fff;font-size:28rpx;margin-bottom:8rpx;display:block}.record-list .record-item .info .time{color:rgba(255,255,255,.6);font-size:24rpx}.record-list .record-item .reward{color:#ff4d8f;font-size:28rpx;font-weight:600}.share-btn{position:fixed;bottom:40rpx;left:40rpx;right:40rpx;height:88rpx;line-height:88rpx;background:#ff4d8f;color:#fff;font-size:32rpx;border-radius:100rpx}
