.settings-page{min-height:100vh;padding:20rpx;box-sizing:border-box;background:#f8f8f8}.settings-page .settings-group{margin-bottom:30rpx}.settings-page .settings-group .group-title{font-size:28rpx;color:#999;padding:20rpx 30rpx}.settings-page .settings-group .settings-list{background:rgba(255,255,255,.9);border-radius:20rpx;overflow:hidden}.settings-page .settings-group .settings-list .settings-item{display:flex;justify-content:space-between;align-items:center;padding:30rpx;border-bottom:1rpx solid rgba(0,0,0,.05)}.settings-page .settings-group .settings-list .settings-item:last-child{border-bottom:none}.settings-page .settings-group .settings-list .settings-item .item-left{display:flex;align-items:center}.settings-page .settings-group .settings-list .settings-item .item-left .icon{font-size:36rpx;margin-right:20rpx}.settings-page .settings-group .settings-list .settings-item .item-left .label{font-size:28rpx;color:#333}.settings-page .settings-group .settings-list .settings-item .item-right{display:flex;align-items:center}.settings-page .settings-group .settings-list .settings-item .item-right .value{font-size:26rpx;color:#999;margin-right:10rpx}.settings-page .settings-group .settings-list .settings-item .item-right .arrow{color:#ccc;font-size:24rpx}.settings-page .settings-group .settings-list .settings-item:active{background:rgba(0,0,0,.02)}.settings-page .settings-group .danger-zone{margin-top:60rpx;padding:0 30rpx}.settings-page .settings-group .danger-zone .danger-btn{width:100%;height:88rpx;line-height:88rpx;text-align:center;border-radius:44rpx;font-size:30rpx;margin-bottom:20rpx;background:#fff;color:#ff6b6b;border:none}.settings-page .settings-group .danger-zone .danger-btn.delete{background:#f44;color:#fff}.settings-page .settings-group .danger-zone .danger-btn:active{opacity:.8}
