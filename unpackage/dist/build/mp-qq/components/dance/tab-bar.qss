.tab-bar{position:fixed;bottom:0;left:0;right:0;height:100rpx;-webkit-backdrop-filter:blur(10px);backdrop-filter:blur(10px);display:flex;justify-content:space-around;align-items:center;border-top:2rpx solid rgba(255,255,255,.1);z-index:100}.tab-bar .tab-item{position:relative;flex:1;height:100%;display:flex;flex-direction:column;justify-content:center;align-items:center;transition:all .3s ease}.tab-bar .tab-item .text{font-size:28rpx;color:rgba(255,255,255,.6);transition:all .3s ease;transform:translateY(0)}.tab-bar .tab-item .indicator{position:absolute;bottom:12rpx;width:40rpx;height:4rpx;background:#ff4d8f;border-radius:4rpx;transform-origin:center;animation:indicatorIn .3s ease-out forwards}.tab-bar .tab-item.active .text{color:#ff4d8f;font-weight:500;transform:translateY(-6rpx)}.tab-bar .tab-item:active{transform:scale(.95)}.tab-bar .tab-item:after{content:"";position:absolute;top:50%;left:50%;width:0;height:0;background:rgba(255,77,143,.1);border-radius:50%;transform:translate(-50%,-50%);transition:all .3s ease;opacity:0}.tab-bar .tab-item:hover:after{width:80rpx;height:80rpx;opacity:1}.tab-bar .tab-item:hover .text{color:rgba(255,255,255,.8)}.tab-bar .tab-item:hover.active .text{color:#ff4d8f}@keyframes indicatorIn{0%{transform:scaleX(0);opacity:0}to{transform:scaleX(1);opacity:1}}@supports (padding-bottom: env(safe-area-inset-bottom)){.tab-bar{padding-bottom:env(safe-area-inset-bottom)}}
