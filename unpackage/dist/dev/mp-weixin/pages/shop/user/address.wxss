.address-page {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 140rpx;
}
.address-list {
  padding: 20rpx;
}
.address-list .address-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}
.address-list .address-item .content .info {
  margin-bottom: 20rpx;
}
.address-list .address-item .content .info .user-info {
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}
.address-list .address-item .content .info .user-info .name {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 20rpx;
  color: #333;
}
.address-list .address-item .content .info .user-info .phone {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}
.address-list .address-item .content .info .user-info .tag {
  font-size: 24rpx;
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.address-list .address-item .content .info .address-info {
  display: flex;
  align-items: flex-start;
}
.address-list .address-item .content .info .address-info .location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.address-list .address-item .content .info .address-info .text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}
.address-list .address-item .content .actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}
.address-list .address-item .content .actions .default {
  display: flex;
  align-items: center;
}
.address-list .address-item .content .actions .default .checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  margin-right: 12rpx;
  position: relative;
}
.address-list .address-item .content .actions .default .checkbox.active {
  background: #ff6b6b;
  border-color: #ff6b6b;
}
.address-list .address-item .content .actions .default .checkbox.active::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 16rpx;
  height: 16rpx;
  background: #fff;
  border-radius: 50%;
}
.address-list .address-item .content .actions .default .label {
  font-size: 26rpx;
  color: #666;
}
.address-list .address-item .content .actions .edit {
  padding: 10rpx;
}
.address-list .address-item .content .actions .edit .icon {
  font-size: 36rpx;
  color: #999;
}
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}
.empty .empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.empty .empty-text {
  font-size: 28rpx;
  color: #999;
}
.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.03);
}
.footer .add-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff6b6b;
  color: #fff;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
}
.footer .add-btn:active {
  background: #ff5252;
}