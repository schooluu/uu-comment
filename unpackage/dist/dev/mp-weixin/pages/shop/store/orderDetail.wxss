.order-detail {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}
.order-detail .status-card {
  background: #e4393c;
  color: #fff;
  padding: 40rpx 24rpx;
}
.order-detail .status-card .status-header {
  margin-bottom: 24rpx;
}
.order-detail .status-card .status-header .status-text {
  font-size: 36rpx;
  font-weight: 500;
}
.order-detail .status-card .status-header .status-desc {
  font-size: 26rpx;
  margin-top: 8rpx;
  opacity: 0.9;
}
.order-detail .status-card .pickup-info {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.order-detail .status-card .pickup-info .qrcode-wrap {
  width: 120rpx;
  margin-right: 24rpx;
  text-align: center;
}
.order-detail .status-card .pickup-info .qrcode-wrap .qrcode {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  padding: 8rpx;
  border-radius: 12rpx;
}
.order-detail .status-card .pickup-info .qrcode-wrap .qrcode-tip {
  font-size: 20rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}
.order-detail .status-card .pickup-info .pickup-detail {
  flex: 1;
}
.order-detail .status-card .pickup-info .pickup-detail .pickup-code {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}
.order-detail .status-card .pickup-info .pickup-detail .pickup-time {
  font-size: 28rpx;
  opacity: 0.9;
}
.order-detail .store-card,
.order-detail .order-card,
.order-detail .info-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}
.order-detail .store-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-detail .store-card .store-info {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 24rpx;
}
.order-detail .store-card .store-info .store-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  background: #f8f8f8;
}
.order-detail .store-card .store-info .store-detail {
  flex: 1;
  min-width: 0;
}
.order-detail .store-card .store-info .store-detail .store-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.order-detail .store-card .store-info .store-detail .store-address {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.order-detail .store-card .contact-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 24rpx;
  height: 64rpx;
  border: none;
  border-radius: 32rpx;
  background: #f8f8f8;
  font-size: 26rpx;
  color: #333;
}
.order-detail .store-card .contact-btn::after {
  display: none;
}
.order-detail .store-card .contact-btn .icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  color: #666;
}
.order-detail .store-card .contact-btn .btn-text {
  line-height: 1;
}
.order-detail .store-card .contact-btn-hover {
  background: #f0f0f0;
  transform: scale(0.98);
}
.order-detail .order-card .card-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}
.order-detail .order-card .goods-list .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.order-detail .order-card .goods-list .goods-item:last-child {
  border-bottom: none;
}
.order-detail .order-card .goods-list .goods-item .goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.order-detail .order-card .goods-list .goods-item .goods-info {
  flex: 1;
}
.order-detail .order-card .goods-list .goods-item .goods-info .goods-name {
  font-size: 28rpx;
  font-weight: 500;
}
.order-detail .order-card .goods-list .goods-item .goods-info .goods-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.order-detail .order-card .goods-list .goods-item .goods-info .price-wrap {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.order-detail .order-card .goods-list .goods-item .goods-info .price-wrap .price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: 500;
}
.order-detail .order-card .goods-list .goods-item .goods-info .price-wrap .count {
  font-size: 26rpx;
  color: #666;
}
.order-detail .order-card .order-total {
  margin-top: 24rpx;
  text-align: right;
  font-size: 28rpx;
  color: #666;
}
.order-detail .order-card .order-total .total-price {
  font-size: 36rpx;
  font-weight: 500;
  color: #e4393c;
  margin-left: 12rpx;
}
.order-detail .info-card .info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
}
.order-detail .info-card .info-item .label {
  color: #666;
  width: 140rpx;
}
.order-detail .info-card .info-item .value {
  flex: 1;
  color: #333;
}
.order-detail .bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.order-detail .bottom-bar .action-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  margin: 0 12rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
}
.order-detail .bottom-bar .action-btn.outline {
  background: #fff;
  border: 1rpx solid #ddd;
  color: #666;
}
.order-detail .bottom-bar .action-btn.primary {
  background: #e4393c;
  color: #fff;
}