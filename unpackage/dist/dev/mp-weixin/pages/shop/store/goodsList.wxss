.page-container {
  height: 100vh;
  background: #f8f9fa;
}
.page-container .banner {
  height: 300rpx;
}
.page-container .banner .banner-image {
  width: 100%;
  height: 100%;
}
.page-container .main-content {
  display: flex;
  height: calc(100vh - 300rpx);
}
.page-container .main-content .category-sidebar {
  width: 160rpx;
  background: #fff;
  border-right: 1rpx solid #f0f0f0;
}
.page-container .main-content .category-sidebar .category-item {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  position: relative;
}
.page-container .main-content .category-sidebar .category-item .category-icon {
  font-size: 40rpx;
}
.page-container .main-content .category-sidebar .category-item .category-name {
  font-size: 24rpx;
  color: #333;
}
.page-container .main-content .category-sidebar .category-item.active {
  background: #fff5f5;
}
.page-container .main-content .category-sidebar .category-item.active .category-icon,
.page-container .main-content .category-sidebar .category-item.active .category-name {
  color: #e4393c;
}
.page-container .main-content .category-sidebar .category-item.active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 36rpx;
  background: #e4393c;
  border-radius: 0 4rpx 4rpx 0;
}
.page-container .main-content .goods-content {
  flex: 1;
  background: #fff;
}
.page-container .main-content .goods-content .goods-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}
.page-container .main-content .goods-content .goods-grid .goods-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-image {
  width: 100%;
  height: 260rpx;
  background: #f5f5f5;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info {
  padding: 16rpx;
  position: relative;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-name {
  font-size: 28rpx;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-desc {
  font-size: 24rpx;
  color: #999;
  margin: 8rpx 0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .price-wrap {
  flex: 1;
  padding-right: 60rpx;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .price-wrap .price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: 500;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .price-wrap .original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .price-wrap .sold {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .add-cart-btn {
  width: 48rpx;
  height: 48rpx;
  padding: 0;
  border-radius: 50%;
  background: #e4393c;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .add-cart-btn .btn-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .add-cart-btn.disabled {
  background: #ccc;
}
.page-container .main-content .goods-content .goods-grid .goods-item .goods-info .goods-bottom .add-cart-btn:active {
  transform: scale(0.95);
}
.page-container .cart-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.page-container .cart-bar .cart-info {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.page-container .cart-bar .cart-info .cart-icon-wrap {
  position: relative;
}
.page-container .cart-bar .cart-info .cart-icon-wrap .cart-icon {
  font-size: 48rpx;
}
.page-container .cart-bar .cart-info .cart-icon-wrap .cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  background: #ff5722;
  color: #fff;
  font-size: 24rpx;
  border-radius: 18rpx;
  padding: 0 8rpx;
}
.page-container .cart-bar .cart-info .price-info .total-price {
  font-size: 36rpx;
  font-weight: 500;
  color: #e4393c;
}
.page-container .cart-bar .cart-info .price-info .delivery-fee {
  font-size: 24rpx;
  color: #999;
  margin-left: 12rpx;
}
.page-container .cart-bar .checkout-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #e4393c;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}
.page-container .cart-bar .checkout-btn.disabled {
  background: #ccc;
}
.page-container .cart-popup {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 60vh;
}
.page-container .cart-popup .popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.page-container .cart-popup .popup-header .title {
  font-size: 32rpx;
  font-weight: 500;
}
.page-container .cart-popup .popup-header .clear-btn {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 24rpx;
  color: #999;
}
.page-container .cart-popup .popup-header .clear-btn .icon {
  font-size: 28rpx;
}
.page-container .cart-popup .cart-list {
  max-height: calc(60vh - 100rpx);
}
.page-container .cart-popup .cart-list .cart-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.page-container .cart-popup .cart-list .cart-item .goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.page-container .cart-popup .cart-list .cart-item .goods-info {
  flex: 1;
}
.page-container .cart-popup .cart-list .cart-item .goods-info .goods-name {
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.page-container .cart-popup .cart-list .cart-item .goods-info .goods-price {
  font-size: 32rpx;
  color: #e4393c;
  margin-top: 8rpx;
}
.page-container .cart-popup .cart-list .cart-item .quantity-control {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.page-container .cart-popup .cart-list .cart-item .quantity-control button {
  width: 44rpx;
  height: 44rpx;
  padding: 0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}
.page-container .cart-popup .cart-list .cart-item .quantity-control button.minus-btn {
  background: #fff;
  border: 2rpx solid #e4393c;
  color: #e4393c;
}
.page-container .cart-popup .cart-list .cart-item .quantity-control button.plus-btn {
  background: #e4393c;
  color: #fff;
}
.page-container .cart-popup .cart-list .cart-item .quantity-control .count {
  min-width: 40rpx;
  text-align: center;
  font-size: 28rpx;
}
.page-container .loading-state {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 26rpx;
}