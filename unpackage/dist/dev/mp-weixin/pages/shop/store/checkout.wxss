.checkout-page {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}
.checkout-page .delivery-type {
  display: flex;
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.checkout-page .delivery-type .type-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.checkout-page .delivery-type .type-item.active {
  color: #e4393c;
  background: rgba(228, 57, 60, 0.1);
}
.checkout-page .store-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}
.checkout-page .store-card .store-info {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.checkout-page .store-card .store-info .store-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}
.checkout-page .store-card .store-info .store-detail {
  flex: 1;
}
.checkout-page .store-card .store-info .store-detail .store-name {
  font-size: 32rpx;
  font-weight: 500;
}
.checkout-page .store-card .store-info .store-detail .store-address {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}
.checkout-page .store-card .pickup-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
}
.checkout-page .store-card .pickup-time .label {
  font-size: 28rpx;
  color: #333;
}
.checkout-page .store-card .pickup-time .value {
  font-size: 28rpx;
  color: #666;
}
.checkout-page .goods-list {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}
.checkout-page .goods-list .list-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.checkout-page .goods-list .list-header .title {
  font-size: 32rpx;
  font-weight: 500;
}
.checkout-page .goods-list .list-header .count {
  font-size: 26rpx;
  color: #666;
}
.checkout-page .goods-list .goods-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.checkout-page .goods-list .goods-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
.checkout-page .goods-list .goods-item .goods-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.checkout-page .goods-list .goods-item .goods-info {
  flex: 1;
}
.checkout-page .goods-list .goods-item .goods-info .goods-name {
  font-size: 28rpx;
  font-weight: 500;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.checkout-page .goods-list .goods-item .goods-info .goods-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.checkout-page .goods-list .goods-item .goods-info .price-wrap {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.checkout-page .goods-list .goods-item .goods-info .price-wrap .price-info .price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: 500;
}
.checkout-page .goods-list .goods-item .goods-info .price-wrap .price-info .original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 12rpx;
}
.checkout-page .goods-list .goods-item .goods-info .price-wrap .count {
  font-size: 26rpx;
  color: #666;
}
.checkout-page .customer-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 0 24rpx;
}
.checkout-page .customer-info .info-item {
  display: flex;
  align-items: center;
  height: 88rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.checkout-page .customer-info .info-item:last-child {
  border-bottom: none;
}
.checkout-page .customer-info .info-item .label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}
.checkout-page .customer-info .info-item .input {
  flex: 1;
  font-size: 28rpx;
}
.checkout-page .customer-info .info-item .placeholder {
  color: #999;
}
.checkout-page .remark-box {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}
.checkout-page .remark-box .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}
.checkout-page .remark-box .remark-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.checkout-page .remark-box .placeholder {
  color: #999;
}
.checkout-page .bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.checkout-page .bottom-bar .price-info {
  flex: 1;
}
.checkout-page .bottom-bar .price-info .total-label {
  font-size: 28rpx;
  color: #333;
}
.checkout-page .bottom-bar .price-info .total-price {
  font-size: 36rpx;
  font-weight: 500;
  color: #e4393c;
  margin-left: 12rpx;
}
.checkout-page .bottom-bar .submit-btn {
  width: 240rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #e4393c;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}
.checkout-page .bottom-bar .submit-btn[disabled] {
  background: #ccc;
}
.checkout-page .address-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}
.checkout-page .address-card .address-info {
  position: relative;
}
.checkout-page .address-card .address-info::after {
  content: ">";
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-family: sans-serif;
}
.checkout-page .address-card .address-info .user-info {
  margin-bottom: 16rpx;
}
.checkout-page .address-card .address-info .user-info .name {
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 24rpx;
  color: #333;
}
.checkout-page .address-card .address-info .user-info .phone {
  font-size: 28rpx;
  color: #666;
}
.checkout-page .address-card .address-info .address-wrap {
  display: flex;
  align-items: flex-start;
}
.checkout-page .address-card .address-info .address-wrap .location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  line-height: 1.4;
}
.checkout-page .address-card .address-info .address-wrap .address {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}
.checkout-page .address-card .address-info .no-address {
  display: flex;
  align-items: center;
  height: 88rpx;
  color: #666;
}
.checkout-page .address-card .address-info .no-address .icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  color: #999;
  font-weight: 300;
}
.checkout-page .address-card .address-info .no-address .text {
  flex: 1;
  font-size: 30rpx;
}
.checkout-page .address-card .address-info .no-address .arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}
.checkout-page .address-card:active {
  background: #fafafa;
}