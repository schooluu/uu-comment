.store-detail {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 120rpx;
}
.store-detail .store-swiper {
  height: 500rpx;
}
.store-detail .store-swiper .swiper-image {
  width: 100%;
  height: 100%;
}
.store-detail .glass-effect {
  background: rgba(255, 255, 255, 0.8);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin: 20rpx;
}
.store-detail .store-info {
  margin-top: -60rpx;
  position: relative;
  z-index: 1;
}
.store-detail .store-info .store-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.store-detail .store-info .store-header .store-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.store-detail .store-info .store-header .rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.store-detail .store-info .store-header .rating .stars {
  font-size: 24rpx;
}
.store-detail .store-info .store-header .rating .score {
  font-size: 24rpx;
  color: #ff9800;
}
.store-detail .store-info .store-header .rating .reviews {
  font-size: 24rpx;
  color: #999;
}
.store-detail .store-info .store-header .status-tag {
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
}
.store-detail .store-info .store-header .status-tag.open {
  background: #e8f5e9;
  color: #4caf50;
}
.store-detail .store-info .store-header .status-tag.busy {
  background: #fff3e0;
  color: #ff9800;
}
.store-detail .store-info .store-header .status-tag.closed {
  background: #f5f5f5;
  color: #999;
}
.store-detail .store-info .info-row {
  display: flex;
  margin-bottom: 20rpx;
}
.store-detail .store-info .info-row:last-child {
  margin-bottom: 0;
}
.store-detail .store-info .info-row .label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}
.store-detail .store-info .info-row .value {
  flex: 1;
  font-size: 28rpx;
}
.store-detail .store-info .info-row .value.address {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.store-detail .store-info .info-row .value.address .distance {
  color: #999;
}
.store-detail .store-info .info-row .value.address .nav-icon {
  font-size: 32rpx;
}
.store-detail .store-info .info-row .value.phone {
  color: var(--theme-color, #e4393c);
}
.store-detail .features .feature-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 30rpx;
}
.store-detail .features .feature-grid .feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.store-detail .features .feature-grid .feature-item .feature-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}
.store-detail .features .feature-grid .feature-item .feature-name {
  font-size: 26rpx;
  color: #666;
}
.store-detail .section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}
.store-detail .notice .notice-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.store-detail .hot-products .products-scroll .product-list {
  display: flex;
  padding: 10rpx 0;
}
.store-detail .hot-products .products-scroll .product-list .product-card {
  margin-right: 24rpx;
  width: 240rpx;
}
.store-detail .hot-products .products-scroll .product-list .product-card:last-child {
  margin-right: 0;
}
.store-detail .hot-products .products-scroll .product-list .product-card .product-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}
.store-detail .hot-products .products-scroll .product-list .product-card .product-name {
  font-size: 28rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.store-detail .hot-products .products-scroll .product-list .product-card .product-price {
  font-size: 32rpx;
  color: var(--theme-color, #e4393c);
  font-weight: 500;
}
.store-detail .reviews .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.store-detail .reviews .section-header .view-all {
  font-size: 26rpx;
  color: #666;
}
.store-detail .reviews .review-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.store-detail .reviews .review-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}
.store-detail .reviews .review-item .reviewer-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.store-detail .reviews .review-item .reviewer-info .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.store-detail .reviews .review-item .reviewer-info .name {
  font-size: 28rpx;
  margin-right: 16rpx;
}
.store-detail .reviews .review-item .reviewer-info .time {
  font-size: 24rpx;
  color: #999;
}
.store-detail .reviews .review-item .review-rating {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.store-detail .reviews .review-item .review-rating .stars {
  font-size: 24rpx;
}
.store-detail .reviews .review-item .review-rating .rating-text {
  font-size: 24rpx;
  color: #ff9800;
}
.store-detail .reviews .review-item .review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.store-detail .reviews .review-item .review-images {
  display: flex;
  gap: 12rpx;
}
.store-detail .reviews .review-item .review-images .review-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}
.store-detail .action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.store-detail .action-bar .share-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 30rpx;
  background: #f5f5f5;
  border-radius: 100rpx;
  font-size: 28rpx;
  color: #666;
}
.store-detail .action-bar .share-btn .icon {
  font-size: 32rpx;
}
.store-detail .action-bar .primary-btn {
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: var(--theme-color, #e4393c);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
}
.store-detail .action-bar .primary-btn:disabled {
  opacity: 0.6;
}