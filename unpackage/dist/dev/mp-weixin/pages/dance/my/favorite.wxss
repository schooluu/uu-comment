.container {
  min-height: 100vh;
  background-color: #1C1B21;
  padding: 30rpx;
}
.header {
  margin-bottom: 40rpx;
}
.header .title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.tab-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 100rpx;
  padding: 6rpx;
  margin-bottom: 40rpx;
}
.tab-bar .tab-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 100rpx;
}
.tab-bar .tab-item.active {
  background: #FF4D8F;
}
.favorite-list .favorite-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.favorite-list .favorite-item .cover {
  width: 100%;
  height: 300rpx;
}
.favorite-list .favorite-item .content {
  padding: 30rpx;
}
.favorite-list .favorite-item .content .info {
  margin-bottom: 20rpx;
}
.favorite-list .favorite-item .content .info .name {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}
.favorite-list .favorite-item .content .info .teacher {
  color: #FF4D8F;
  font-size: 28rpx;
  margin-bottom: 12rpx;
  display: block;
}
.favorite-list .favorite-item .content .info .desc {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
  display: block;
}
.favorite-list .favorite-item .content .action-bar {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
.favorite-list .favorite-item .content .action-bar .action-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 100rpx;
  background: rgba(255, 255, 255, 0.1);
  color: #fff;
}
.favorite-list .favorite-item .content .action-bar .action-btn.primary {
  background: #FF4D8F;
}