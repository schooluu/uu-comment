.container {
  min-height: 100vh;
  background-color: #1C1B21;
  padding: 30rpx;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.header .title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.header .clear {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}
.tab-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 100rpx;
  padding: 6rpx;
  margin-bottom: 40rpx;
}
.tab-bar .tab-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 100rpx;
}
.tab-bar .tab-item.active {
  background: #FF4D8F;
}
.notification-list .notification-item {
  position: relative;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.notification-list .notification-item.unread {
  background: rgba(255, 77, 143, 0.1);
}
.notification-list .notification-item .dot {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 16rpx;
  height: 16rpx;
  background: #FF4D8F;
  border-radius: 50%;
}
.notification-list .notification-item .content .title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}
.notification-list .notification-item .content .message {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: block;
}
.notification-list .notification-item .content .time {
  color: rgba(255, 255, 255, 0.4);
  font-size: 24rpx;
}