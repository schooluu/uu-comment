.container {
  min-height: 100vh;
  background-color: #1C1B21;
  padding: 30rpx;
}
.header {
  margin-bottom: 40rpx;
}
.header .title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.section-title {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}
.order-section {
  margin-bottom: 40rpx;
}
.order-section .order-list .order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.order-section .order-list .order-item.selected {
  background: rgba(255, 77, 143, 0.1);
  border: 2rpx solid #FF4D8F;
}
.order-section .order-list .order-item .info .name {
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  display: block;
}
.order-section .order-list .order-item .info .time {
  color: rgba(255, 255, 255, 0.4);
  font-size: 24rpx;
}
.order-section .order-list .order-item .amount {
  color: #FF4D8F;
  font-size: 32rpx;
  font-weight: 600;
}
.form-section {
  margin-bottom: 60rpx;
}
.form-section .form-item {
  margin-bottom: 30rpx;
}
.form-section .form-item .label {
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  display: block;
}
.form-section .form-item .radio-group {
  display: flex;
  gap: 40rpx;
}
.form-section .form-item .radio-group .radio {
  color: #fff;
  font-size: 28rpx;
}
.form-section .form-item .input {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  height: 80rpx;
  padding: 0 30rpx;
  color: #fff;
  font-size: 28rpx;
}
.form-section .form-item .placeholder {
  color: rgba(255, 255, 255, 0.3);
}
.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #FF4D8F;
  color: #fff;
  font-size: 32rpx;
  border-radius: 100rpx;
}