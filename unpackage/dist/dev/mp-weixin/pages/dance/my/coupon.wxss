.container {
  min-height: 100vh;
  background-color: #1C1B21;
  padding: 30rpx;
}
.header {
  margin-bottom: 40rpx;
}
.header .title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.tab-bar {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 100rpx;
  padding: 6rpx;
  margin-bottom: 40rpx;
}
.tab-bar .tab-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 100rpx;
}
.tab-bar .tab-item.active {
  background: #FF4D8F;
}
.coupon-list .coupon-item {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.coupon-list .coupon-item .left {
  width: 200rpx;
  background: #FF4D8F;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.coupon-list .coupon-item .left .amount {
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
}
.coupon-list .coupon-item .left .condition {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
}
.coupon-list .coupon-item .right {
  flex: 1;
  padding: 30rpx;
}
.coupon-list .coupon-item .right .name {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
}
.coupon-list .coupon-item .right .validity, .coupon-list .coupon-item .right .desc {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
  display: block;
  margin-bottom: 8rpx;
}