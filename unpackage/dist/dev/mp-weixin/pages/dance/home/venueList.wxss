.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background-color: #141123f5;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.nav-bar .back-btn {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  padding: 10rpx;
}
.nav-bar .back-btn .iconfont {
  font-size: 40rpx;
  color: #fff;
}
.nav-bar .back-btn:active {
  opacity: 0.8;
}
.nav-bar .title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}
.venue-container {
  min-height: 100vh;
  background-color: #141123f5;
  padding: 30rpx;
  padding-top: 118rpx;
}
.venue-list .venue-item {
  position: relative;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.05);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.venue-list .venue-item:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}
.venue-list .venue-item .venue-image {
  width: 100%;
  height: 300rpx;
  opacity: 0;
  animation: fadeIn 0.5s forwards;
}
.venue-list .venue-item .venue-info {
  padding: 20rpx;
}
.venue-list .venue-item .venue-info .venue-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.venue-list .venue-item .venue-info .venue-address {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-bottom: 16rpx;
}
.venue-list .venue-item .venue-info .venue-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.venue-list .venue-item .venue-info .venue-tags .tag {
  font-size: 22rpx;
  color: #FF4D8F;
  background: rgba(255, 77, 143, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}
.venue-list .venue-item .favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}
@keyframes fadeIn {
to {
    opacity: 1;
}
}