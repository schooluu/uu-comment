.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background-color: #141123f5;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.nav-bar .back-btn {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  padding: 10rpx;
}
.nav-bar .back-btn .iconfont {
  font-size: 40rpx;
  color: #fff;
}
.nav-bar .back-btn:active {
  opacity: 0.8;
}
.nav-bar .title {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}
.venue-detail {
  min-height: 100vh;
  background-color: #141123f5;
}
.venue-detail .gallery {
  margin-top: calc(var(--status-bar-height) + 88rpx);
  height: 400rpx;
}
.venue-detail .gallery image {
  width: 100%;
  height: 100%;
  opacity: 0;
  animation: fadeIn 1s forwards;
}
.venue-detail .info-section {
  padding: 30rpx;
}
.venue-detail .info-section .header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.venue-detail .info-section .header .title-area {
  flex-grow: 1;
}
.venue-detail .info-section .header .title-area .name {
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.venue-detail .info-section .header .title-area .rating {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.venue-detail .info-section .header .title-area .rating .score {
  color: #FF4D8F;
  font-size: 28rpx;
}
.venue-detail .info-section .header .title-area .rating .stars {
  color: #FFD700;
  font-size: 24rpx;
}
.venue-detail .info-section .header .book-btn {
  background: #FF4D8F;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 30rpx;
  border-radius: 100rpx;
  transition: transform 0.2s ease;
}
.venue-detail .info-section .header .book-btn:active {
  transform: scale(0.95);
}
.venue-detail .info-section .address-info {
  margin-bottom: 30rpx;
}
.venue-detail .info-section .address-info .label {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.venue-detail .info-section .address-info .address-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.venue-detail .info-section .address-info .address-row .address {
  color: #fff;
  font-size: 28rpx;
  flex: 1;
}
.venue-detail .info-section .address-info .address-row .copy-btn {
  color: #FF4D8F;
  font-size: 26rpx;
  padding: 4rpx 20rpx;
  border: 2rpx solid #FF4D8F;
  border-radius: 100rpx;
}
.venue-detail .info-section .address-info .distance {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}
.venue-detail .info-section .facility-info .label {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.venue-detail .info-section .facility-info .facility-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.venue-detail .info-section .facility-info .facility-list .facility-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.venue-detail .info-section .facility-info .facility-list .facility-item .icon {
  font-size: 32rpx;
}
.venue-detail .info-section .facility-info .facility-list .facility-item .name {
  color: #fff;
  font-size: 26rpx;
}
.venue-detail .course-section {
  padding: 30rpx;
}
.venue-detail .course-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.venue-detail .course-section .section-header .title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}
.venue-detail .course-section .section-header .more {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
}
.venue-detail .course-section .course-list {
  white-space: nowrap;
}
.venue-detail .course-section .course-list .course-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  text-align: center;
  transition: transform 0.3s ease;
}
.venue-detail .course-section .course-list .course-item:hover {
  transform: scale(1.05);
}
.venue-detail .course-section .course-list .course-item .teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.venue-detail .course-section .course-list .course-item .course-name {
  display: block;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 6rpx;
}
.venue-detail .course-section .course-list .course-item .teacher-name {
  display: block;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-bottom: 6rpx;
}
.venue-detail .course-section .course-list .course-item .time {
  display: block;
  color: #FF4D8F;
  font-size: 24rpx;
}
@keyframes fadeIn {
to {
    opacity: 1;
}
}