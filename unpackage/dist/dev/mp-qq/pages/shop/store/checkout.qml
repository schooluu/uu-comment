<view class="checkout-page"><view class="delivery-type"><view class="{{['type-item', a && 'active']}}" bindtap="{{b}}"> 到店自取 </view><view class="{{['type-item', c && 'active']}}" bindtap="{{d}}"> 外卖配送 </view></view><view class="store-card"><view class="store-info"><image class="store-logo" src="{{e}}" mode="aspectFill"/><view class="store-detail"><text class="store-name">{{f}}</text><text class="store-address">{{g}}</text></view></view><view qq:if="{{h}}" class="pickup-time"><text class="label">自取时间</text><picker mode="time" value="{{j}}" start="09:00" end="21:00" bindchange="{{k}}"><text class="value">{{i}} ></text></picker></view><view qq:if="{{l}}" class="pickup-time"><text class="label">配送时间</text><picker mode="time" value="{{n}}" start="09:00" end="21:00" bindchange="{{o}}"><text class="value">{{m}} ></text></picker></view></view><view qq:if="{{p}}" class="address-card"><view class="address-info" bindtap="{{v}}"><view qq:if="{{q}}"><view class="user-info"><text class="name">{{r}}</text><text class="phone">{{s}}</text></view><view class="address-wrap"><text class="location-icon">📍</text><text class="address">{{t}}</text></view></view><view qq:else class="no-address"><text class="icon">+</text><text class="text">请选择收货地址</text><text class="arrow">></text></view></view></view><view class="goods-list"><view class="list-header"><text class="title">订单详情</text><text class="count">共{{w}}件</text></view><view qq:for="{{x}}" qq:for-item="item" qq:key="i" class="goods-item"><image src="{{item.a}}" class="goods-image" mode="aspectFill"/><view class="goods-info"><text class="goods-name">{{item.b}}</text><text qq:if="{{item.c}}" class="goods-desc">{{item.d}}</text><view class="price-wrap"><view class="price-info"><text class="price">¥{{item.e}}</text><text qq:if="{{item.f}}" class="original-price">¥{{item.g}}</text></view><text class="count">x{{item.h}}</text></view></view></view></view><view class="remark-box"><text class="label">备注</text><input class="remark-input" placeholder="如需备注请输入" placeholder-class="placeholder" value="{{y}}" bindinput="{{z}}"/></view><view class="customer-info"><view class="info-item"><text class="label">取餐人</text><input class="input" placeholder="请输入取餐人姓名" placeholder-class="placeholder" value="{{A}}" bindinput="{{B}}"/></view><view class="info-item"><text class="label">手机号</text><input class="input" type="number" maxlength="11" placeholder="请输入手机号" placeholder-class="placeholder" value="{{C}}" bindinput="{{D}}"/></view></view><view class="bottom-bar"><view class="price-info"><text class="total-label">合计</text><text class="total-price">¥{{E}}</text></view><button class="submit-btn" bindtap="{{F}}"> 提交订单 </button></view></view>