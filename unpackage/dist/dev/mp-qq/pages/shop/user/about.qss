.about-page {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}
.about-page .brand-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  margin-bottom: 30rpx;
}
.about-page .brand-info .logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.about-page .brand-info .app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.about-page .brand-info .version {
  font-size: 24rpx;
  color: #999;
}
.about-page .section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}
.about-page .company-intro {
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.about-page .company-intro .intro-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}
.about-page .feature-list {
  margin-bottom: 30rpx;
}
.about-page .feature-list .feature-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.about-page .feature-list .feature-item:last-child {
  border-bottom: none;
}
.about-page .feature-list .feature-item .item-left {
  display: flex;
  align-items: center;
}
.about-page .feature-list .feature-item .item-left .icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}
.about-page .feature-list .feature-item .item-left .label {
  font-size: 28rpx;
  color: #333;
}
.about-page .feature-list .feature-item .item-right {
  display: flex;
  align-items: center;
}
.about-page .feature-list .feature-item .item-right .value {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}
.about-page .feature-list .feature-item .item-right .arrow {
  font-size: 24rpx;
  color: #ccc;
}
.about-page .feature-list .feature-item:active {
  background: rgba(0, 0, 0, 0.02);
}
.about-page .contact-info {
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.about-page .contact-info .contact-list .contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.about-page .contact-info .contact-list .contact-item:last-child {
  margin-bottom: 0;
}
.about-page .contact-info .contact-list .contact-item .icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}
.about-page .contact-info .contact-list .contact-item .contact-detail {
  flex: 1;
}
.about-page .contact-info .contact-list .contact-item .contact-detail .label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 4rpx;
}
.about-page .contact-info .contact-list .contact-item .contact-detail .value {
  font-size: 28rpx;
  color: #333;
}
.about-page .contact-info .contact-list .contact-item:active {
  opacity: 0.8;
}
.about-page .social-media {
  padding: 30rpx;
  margin-bottom: 60rpx;
}
.about-page .social-media .social-list {
  display: flex;
  justify-content: space-around;
}
.about-page .social-media .social-list .social-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.about-page .social-media .social-list .social-item .social-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}
.about-page .social-media .social-list .social-item .social-name {
  font-size: 24rpx;
  color: #666;
}
.about-page .social-media .social-list .social-item:active {
  opacity: 0.8;
}
.about-page .copyright {
  text-align: center;
  padding: 30rpx 0;
}
.about-page .copyright .copyright-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  display: block;
}
.glass-effect {
  background: rgba(255, 255, 255, 0.9);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}