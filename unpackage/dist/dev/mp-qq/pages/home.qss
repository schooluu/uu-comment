}
.container .projects-section {
  padding: 40rpx;
}
.container .projects-section .section-header {
  text-align: center;
  margin-bottom: 40rpx;
}
.container .projects-section .section-header .section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.container .projects-section .section-header .section-subtitle {
  font-size: 26rpx;
  color: #666;
}
.container .projects-section .project-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}
.container .projects-section .project-grid .project-card {
  border-radius: 24rpx;
  overflow: hidden;
  transition: all 0.3s;
}
.container .projects-section .project-grid .project-card:hover {
  transform: translateY(-6rpx);
}
.container .projects-section .project-grid .project-card .project-image {
  width: 100%;
  height: 300rpx;
  background: #f5f5f5;
}
.container .projects-section .project-grid .project-card .project-info {
  padding: 24rpx;
}
.container .projects-section .project-grid .project-card .project-info .project-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.container .projects-section .project-grid .project-card .project-info .project-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.container .projects-section .project-grid .project-card .project-info .project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
.container .projects-section .project-grid .project-card .project-info .project-tags .tag {
  font-size: 22rpx;
  color: var(--theme-color);
  background: rgba(var(--theme-rgb), 0.1);
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}
.container .projects-links-section {
  padding: 40rpx;
  margin-top: 20rpx;
}
.container .projects-links-section .section-header {
  text-align: center;
  margin-bottom: 40rpx;
}
.container .projects-links-section .section-header .section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.container .projects-links-section .section-header .section-subtitle {
  font-size: 26rpx;
  color: #666;
}
.container .projects-links-section .link-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s;
}
.container .projects-links-section .link-card:active {
  transform: scale(0.98);
}
.container .projects-links-section .link-card .link-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: rgba(var(--theme-rgb), 0.1);
  margin-right: 20rpx;
}
.container .projects-links-section .link-card .link-icon .icon {
  font-size: 40rpx;
}
.container .projects-links-section .link-card .link-info {
  flex: 1;
}
.container .projects-links-section .link-card .link-info .link-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}
.container .projects-links-section .link-card .link-info .link-desc {
  font-size: 24rpx;
  color: #666;
}
.container .projects-links-section .link-card .arrow {
  font-size: 32rpx;
  color: var(--theme-color);
  margin-left: 20rpx;
}
.container .contact-section {
  padding: 60rpx 40rpx;
  text-align: center;
}
.container .contact-section .contact-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
}
.container .contact-section .contact-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 30rpx;
}
.container .contact-section .contact-buttons .contact-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  border-radius: 100rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}
.container .contact-section .contact-buttons .contact-btn.email-btn {
  background: var(--theme-gradient);
  color: #fff;
}
.container .contact-section .contact-buttons .contact-btn.github-btn {
  background: rgba(0, 0, 0, 0.05);
  color: #333;
}
.container .contact-section .contact-buttons .contact-btn:active {
  transform: scale(0.95);
}
.animate-slide-up {
  animation: slideUp 0.8s ease-out;
}
.animate-fade-in {
  animation: fadeIn 1s ease-out;
}
.animate-scale-up {
  animation: scaleUp 0.6s ease-out;
}
@keyframes slideUp {
from {
    opacity: 0;
    transform: translateY(30rpx);
}
to {
    opacity: 1;
    transform: translateY(0);
}
}
@keyframes fadeIn {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
@keyframes scaleUp {
from {
    opacity: 0;
    transform: scale(0.9);
}
to {
    opacity: 1;
    transform: scale(1);
}
}
.theme-default {
  --theme-color: #7C3AED;
