.container {
  min-height: 100vh;
}
.container.theme-default {
  background: linear-gradient(135deg, rgba(124, 58, 237, 0.05), rgba(79, 70, 229, 0.05));
}
.container.theme-default .nav-bar {
  background: linear-gradient(to bottom, rgba(124, 58, 237, 0.1), rgba(124, 58, 237, 0.05));
}
.container.theme-default .logo,
.container.theme-default .title {
  background: var(--theme-gradient);
  -webkit-background-clip: text;
}
.container.theme-blue {
  background: linear-gradient(135deg, rgba(14, 165, 233, 0.05), rgba(37, 99, 235, 0.05));
}
.container.theme-blue .nav-bar {
  background: linear-gradient(to bottom, rgba(14, 165, 233, 0.1), rgba(14, 165, 233, 0.05));
}
.container.theme-blue .logo,
.container.theme-blue .title {
  background: var(--theme-gradient);
  -webkit-background-clip: text;
}
.container.theme-green {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.05), rgba(5, 150, 105, 0.05));
}
.container.theme-green .nav-bar {
  background: linear-gradient(to bottom, rgba(16, 185, 129, 0.1), rgba(16, 185, 129, 0.05));
}
.container.theme-green .logo,
.container.theme-green .title {
  background: var(--theme-gradient);
  -webkit-background-clip: text;
}
.container.theme-red {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.05), rgba(220, 38, 38, 0.05));
}
.container.theme-red .nav-bar {
  background: linear-gradient(to bottom, rgba(239, 68, 68, 0.1), rgba(239, 68, 68, 0.05));
}
.container.theme-red .logo,
.container.theme-red .title {
  background: var(--theme-gradient);
  -webkit-background-clip: text;
}
.container .nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
}
.container .nav-bar .nav-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx;
}
.container .nav-bar .nav-content .logo {
  font-size: 36rpx;
  font-weight: 600;
  background: linear-gradient(to right, #333, #666);
  -webkit-background-clip: text;
  color: transparent;
}
.container .hero-section {
  padding: 60rpx 40rpx;
}
.container .hero-section .hero-content {
  text-align: center;
}
.container .hero-section .hero-content .title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  background: linear-gradient(to right, #333, #666);
  -webkit-background-clip: text;
  color: transparent;
}
.container .hero-section .hero-content .subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}
.container .hero-section .hero-content .stats {
  display: flex;
  justify-content: center;
