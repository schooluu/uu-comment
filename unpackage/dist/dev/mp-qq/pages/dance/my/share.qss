.container {
  min-height: 100vh;
  background-color: #1C1B21;
  padding: 30rpx;
}
.header {
  margin-bottom: 40rpx;
}
.header .title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.share-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.share-card .qrcode {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 20rpx;
}
.share-card .tips {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}
.share-methods {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}
.share-methods .method-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.share-methods .method-item .icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}
.share-methods .method-item .name {
  color: #fff;
  font-size: 28rpx;
}
.reward-info {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.reward-info .title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.reward-info .reward-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.reward-info .reward-item .dot {
  color: #FF4D8F;
  font-size: 28rpx;
  margin: 0 8rpx;
}
.reward-info .reward-item .text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 26rpx;
}